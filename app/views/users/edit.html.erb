<h3 id='user_profile'>プロフィール編集</h3>
<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul class='user_new_ul' >
      <% @user.errors.full_messages.each do |msg| %>
        <li class="well"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group profile_content ">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Write down your name", class: "form-control" %>
  </div>
  <div class="form-group profile_content ">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Write down your email", class: "form-control" %>
  </div>
  <div class="form-group profile_content "> 
    <%= f.label :profile_image %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Edit my account", class: "btn btn-primary" %>
<% end %>